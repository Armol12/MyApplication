<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/back"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите размер пазла:"
            android:textSize="30sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/puzzle_size_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/size_3x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3x3"
                android:textSize="30sp"
                android:textColor="@color/text_color" />

            <RadioButton
                android:id="@+id/size_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4x4"
                android:textSize="30sp"
                android:textColor="@color/text_color" />

            <RadioButton
                android:id="@+id/size_5x5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5x5"
                android:textSize="30sp"
                android:textColor="@color/text_color" />

            <RadioButton
                android:id="@+id/size_6x6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6x6"
                android:textSize="30sp"
                android:textColor="@color/text_color" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/timed_checkbox"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Включить таймер"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите время таймера:"
            android:textSize="25sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/timer_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/timer_30s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 секунд"
                android:textSize="30sp"
                android:textColor="@color/text_color" />

            <RadioButton
                android:id="@+id/timer_60s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60 секунд"
                android:textSize="30sp"
                android:textColor="@color/text_color" />

            <RadioButton
                android:id="@+id/timer_120s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 секунд"
                android:textSize="30sp"
                android:textColor="@color/text_color" />

            <RadioButton
                android:id="@+id/timer_180s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180 секунд"
                android:textSize="30sp"
                android:textColor="@color/text_color" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/random_image_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Случайное изображение"
            android:textSize="25sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/button_apply"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Сохранить"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/button_text_color" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Назад"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/button_text_color" />
    </LinearLayout>
</ScrollView>
